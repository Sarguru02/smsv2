generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id
  username  String @unique // soft linked to Student.RollNo
  password  String
  role      String // "STUDENT" | "TEACHER" | "ADMIN" (enforced in app logic)

  createdAt DateTime
  updatedAt DateTime
}

model Student {
  id        String @id
  rollNo    String @unique
  name      String
  class     String?
  section   String?

  createdAt DateTime
  updatedAt DateTime
}

model Mark {
  id        String   @id
  studentId String   // link manually in app logic (not a foreign key) -> linking with rollNo
  examName  String   // e.g. "Cycle Test 1", "Semester Exam"
  marks     Json     // { "math": 80, "english": 90, "science": 85 }

  createdAt DateTime
  updatedAt DateTime
}

// for the batch processor
model Job {
  id              String   @id @default(cuid())
  userID          String
  fileUrl         String
  fileName        String
  type            String
  totalRows       Int      @default(0)
  processedRows   Int      @default(0)
  processedRowIds Json?
  status          String   @default("pending") // pending, processing, completed, failed
  errorStatus     Json?    // error details if job failed

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
